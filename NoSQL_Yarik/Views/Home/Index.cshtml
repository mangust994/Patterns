<h3>Пушки в магазине Пажылова Мисты</h3>
<table>
    <tr>
        <td>Название</td>
        <td>Цена</td>
        <td>Количество</td>
        <td>Описание</td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var gun in ViewBag.Guns)
    {
    <tr>
        <td>@gun.Name</td>
        <td>@gun.Price</td>
        <td>@gun.Quantity</td>
        <td>@gun.Decription</td>
        <td><a href="~/Home/Buy/@gun.IdProduct">Купить</a></td>
        <td><a href="~/Home/Update/@gun.IdProduct">Обновить</a></td>
        
    </tr>
    }
</table>
